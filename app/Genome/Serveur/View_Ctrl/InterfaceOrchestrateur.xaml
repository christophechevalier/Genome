<Page x:Class="Serveur.View_Ctrl.InterfaceOrchestrateur"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Serveur.View_Ctrl"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="InterfaceOrchestrateur">

    <Grid x:Name="GrilleParDefaut">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>

        <Grid Background="LightGray"
              Grid.Row="0" 
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Orchestrateur" FontSize="4" />
            </Viewbox>
        </Grid>

        <Grid Grid.Row="1" 
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="MyDataGrid"
                      Grid.Row="1"
                      Grid.Column="0"
                      Height="450"
                      MinHeight="350"
                      Width="900"
                      MinWidth="600"
                      Background="LightGray" 
                      RowBackground="LightYellow"
                      AlternatingRowBackground="LightBlue"
                      BorderBrush="Gray" 
                      BorderThickness="5"
                      GridLinesVisibility="Vertical" 
                      HeadersVisibility="All"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" 
                      IsReadOnly="True"
                      AreRowDetailsFrozen="True"
                      CanUserReorderColumns="False"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Visible"
                      SelectionMode="Extended"
                      RowHeight="30" 
                      ColumnWidth="110" />
        </Grid>


        <Grid Grid.Row="2"
              Grid.Column="2"
              Grid.RowSpan="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Background="DarkGray"
                  Grid.Column="0" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" 
                  Grid.RowSpan="2" 
                  Grid.ColumnSpan="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.15*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*" />
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.1*" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Row="1" 
                         Grid.Column="1"
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch">
                    <Button x:Name="BtnRetourMenuServeur"
                            FontSize="16"
                            Width="200"
                            Height="40"
                            Content="Retour" />
                </Viewbox>
            </Grid>

        </Grid>
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1 1 1 1" />
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1 1 1 1" />

    </Grid>
</Page>